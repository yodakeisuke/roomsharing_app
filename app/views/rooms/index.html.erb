    <%= render "shared/header" %>

    <% if flash.notice %>
      <p class="notice"><%= flash.notice %></p>
    <% end %>

    <div class="container-fiuld room-posts">
      <h4 class="pb-4">登録済みルーム一覧</h4>

      <table>
        <thead>
          <tr align="center">
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>料金</th>
            <th>作成日</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td>
                <% if room.image.attached? %>
                  <%= link_to image_tag(room.image, class: "room-posts-image"), new_booking_path(:room_id => room.id) %>
                <% else %>
                  <%= link_to image_tag("default_icon.jpeg", class: "room-posts-image"), new_booking_path(:room_id => room.id) %>
                <% end %>
              <td class="posts-name"><%= link_to room.name, new_booking_path(:room_id => room.id) %></td>
              <td class="posts-content"><%= room.introduction%></td>
              <td class="price-icon">¥ <%= room.charge.to_i() %> </td>
              <td><%= room.created_at.to_s(:datetime_jp) %> </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <%= render "shared/footer" %>
